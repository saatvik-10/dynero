generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  username       String
  name           String?
  profilePicture String?
  password       String?
  solanaWalletId String?
  solanaWallet   SolanaWallet?
  inrWallet      InrWallet?
  provider       Provider
}

model InrWallet {
  id      String @id @default(cuid())
  balance Int
  userId  String @unique
  user    User   @relation(fields: [userId], references: [id])
}

model SolanaWallet {
  id         String @id @default(cuid())
  pubkey     String
  privateKey String
  userId     String @unique
  user       User   @relation(fields: [userId], references: [id])
}

enum Provider {
  Google
}
